<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Activity.RegistrationActivity">
<EditText
    android:inputType="text"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:hint="Name"
    android:layout_marginTop="50dp"
    android:id="@+id/id_user_name"
    android:drawableRight="@drawable/ic_action_user"
    />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Email"
        android:id="@+id/id_user_email"
        android:drawableRight="@drawable/ic_automatic_email"
        android:layout_marginTop="110dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:id="@+id/id_user_password"
        android:drawableRight="@drawable/ic_automatic_password"
        android:layout_marginTop="170dp"
        />
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="#consumer no"
        android:id="@+id/id_user_cno"
        android:drawableRight="@drawable/ic_action_consumer"
        android:layout_marginTop="230dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@color/darkblue"
        android:text="Register"
        android:id="@+id/id_btn_register"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registered? |"
        android:layout_below="@+id/id_btn_register"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/id_btn_register"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:id="@+id/txtlogin"
        android:textColor="@color/blue"
        android:layout_marginLeft="200dp"/>
</RelativeLayout>